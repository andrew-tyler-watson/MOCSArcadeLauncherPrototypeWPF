<UserControl x:Class="MocsArcadeLauncher.GameTileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MocsArcadeLauncher"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="SelectionBorder" BorderBrush="AliceBlue" BorderThickness="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>


            <Image Source="{Binding PathToIconFile}" HorizontalAlignment="Center" Grid.Row="0"/>
            <TextBlock Text="{Binding Name}" Foreground="LawnGreen" HorizontalAlignment="Center" Grid.Row="1"/>
        </Grid>
    </Border>
</UserControl>
